<UserControl x:Class="PointOfSale.CashOrCredit"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PointOfSale"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="650" Foreground="White" Background="Black" BorderBrush="White">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Button Click ="Cash" Foreground="White" Background="Black" BorderBrush="White" Grid.Row="0" Grid.Column="0" FontSize="40" Height="155" Width="250">Cash</Button>
        <Button Click="Credit" Foreground="White" Background="Black" BorderBrush="White" Grid.Row="0" Grid.Column="1" FontSize="40" Height="155" Width="250">Credit/Debit</Button>
    </Grid>
</UserControl>
