<UserControl x:Class="PointOfSale.Counter"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PointOfSale"
             mc:Ignorable="d" 
             Height="30" Width="90">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Button Name ="plusButton" Click="Plus" Foreground="White" Background="Black" BorderBrush="White" Grid.Row="0" Grid.Column="2" FontSize="20" Height="30" Width="30" >+</Button>
        <TextBlock Name="text" TextAlignment="Center" FontSize="20" Foreground="Black" Background="White" Grid.Row="0" Grid.Column="1">0</TextBlock>
        <Button IsEnabled="False" Name="minusButton" Click="Minus" Foreground="White" Background="Black" BorderBrush="White" Grid.Row="0" Grid.Column="0" FontSize="15" Height="30" Width="30" >-</Button>
    </Grid>
</UserControl>
